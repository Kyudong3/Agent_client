<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/readBoard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/background_light"
        android:elevation="5.7dp"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/board_toolbar"
                android:textColor="#7e7e7e"
                android:textSize="20sp"
                android:textStyle="normal" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/readBoard_timeTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="3dp"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/readBoard_titleTxv"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/readBoard_hitCountIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/ic_visibility_white_24dp" />

            <TextView
                android:id="@+id/readBoard_hitCountTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingEnd="1dp"
                android:paddingStart="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/readBoard_likeCountIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/ic_favorite_border_white_24dp" />

            <TextView
                android:id="@+id/readBoard_likeCountTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingEnd="1dp"
                android:paddingStart="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_read_LL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/readBoard_dislikeCountIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/ic_chat_white_24dp" />

            <TextView
                android:id="@+id/readBoard_dislikeCountTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingEnd="1dp"
                android:paddingStart="6dp"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/readBoard_contentTxv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="200"
            android:padding="17dp"
            android:scrollbars="vertical"
            android:textSize="23sp" />
    </LinearLayout>

</LinearLayout>