<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rv_entity_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rv_timeTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="3dp"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/rv_titleTxv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hitCountLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rv_hitCountIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/ic_visibility_white_24dp" />

            <TextView
                android:id="@+id/rv_hitCountTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingEnd="1dp"
                android:paddingStart="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/likeCountLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rv_likeCountIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/ic_favorite_border_white_24dp" />

            <TextView
                android:id="@+id/rv_likeCountTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingEnd="1dp"
                android:paddingStart="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rv_commentIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/ic_chat_white_24dp" />

            <TextView
                android:id="@+id/rv_CommentTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingEnd="1dp"
                android:paddingStart="6dp"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>